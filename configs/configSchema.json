{
    "title": "Socket server config schema",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "enableAdmin": {
            "type": "boolean",
            "default": false
        },
        "rooms": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "events": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "type": {
                                    "type": "string",
                                    "oneOf": [{
                                        "const": "unicast",
                                        "description": "Send to a user"
                                    }, {
                                        "const": "broadcast",
                                        "description": "broadcast to whole channel"
                                    }]
                                }

                            }
                        }
                    }
                }
            }
        }
    }
}
